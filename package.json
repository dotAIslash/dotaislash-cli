{
  "name": "@dotaislash/cli",
  "version": "1.0.0",
  "description": "Reference CLI for VERSA 1.0 - Vendor-neutral Extensible Repo Spec for Agents",
  "keywords": [
    "versa",
    "ai",
    "agents",
    "cli",
    "dotaislash",
    "configuration"
  ],
  "bin": {
    "versa": "./dist/bin.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build && bun test"
  },
  "dependencies": {
    "@dotaislash/schemas": "link:@dotaislash/schemas",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "glob": "^10.3.10",
    "yaml": "^2.3.4",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.15.31",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "typescript": "^5.8.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=22.16.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dotAIslash/dotaislash-cli.git"
  },
  "bugs": {
    "url": "https://github.com/dotAIslash/dotaislash-cli/issues"
  },
  "homepage": "https://dotaislash.github.io",
  "author": "Alphin Tom <alphinctom@gmail.com>"
}
